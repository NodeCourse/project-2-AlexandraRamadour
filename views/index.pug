html
    head
        title Questionnaire
        link(rel="stylesheet", href="/css/style.css")
    body
        if user
            h1 Welcome #{user.firstname} #{user.lastname}!
        
        a(href='/inscription/') Inscription
        br
        a(href='/login/') Connexion


        for survey in surveys
            survey
                a(href='/survey/' + survey.id)
                    h1 #{survey.title}
        

                
        form(method="POST")
            p
                strong Create a new survey
            label(for="title") Title
            br
            input(type="text", id="title", name="title", placeholder="Survey Title")
            br

            label(for="q1") Question 1
            br
            textarea(id="q1", name="q1", place)
            br
            label(for="q2") Question 2
            br
            textarea(id="q2", name="q2", place)
            br
            label(for="q3") Question 3
            br
            textarea(id="q3", name="q3", place)
            br
            label(for="q4") Question 4
            br
            textarea(id="q4", name="q4", place)
            br
            label(for="q5") Question 5
            br
            textarea(id="q5", name="q5", place)
            br
            button(type="submit") Submit